{% extends 'base.html.twig' %}

{% block title %}Footyze{% endblock %}

{% block body %}
    {{ parent() }} {# Appelle le bloc body du parent pour inclure la navigation #}

    <!-- Conteneur flex pour centrer tout le contenu et footer collé au bas -->
    <div class="flex flex-col justify-between min-h-screen">
        <!-- Contenu principal centré -->
        <div class="flex flex-col justify-center items-center flex-grow">
            <div class="text-center">
                <!-- Titre principal -->
                <h1 class="text-3xl text-white font-bold">Bienvenue sur Footyze</h1>

                <!-- Message d'introduction -->
                <p class="text-white text-lg mt-4">
                    Suivez et analysez votre carrière de manager EAFC avec des statistiques détaillées, l’historique de saisons, et bien plus encore !
                </p>

                <!-- Boutons d'action (Inscription/Connexion) -->
                <div class="mt-8 flex justify-center space-x-4">
                    <a href="/inscription" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Inscription
                    </a>
                    <a href="/connexion" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                        Connexion
                    </a>
                </div>

                <!-- Aperçu des fonctionnalités -->
                <div class="mt-12 grid grid-cols-1 gap-6 text-white text-center">
                    <div>
                        <h2 class="text-xl font-bold">Suivi des statistiques</h2>
                        <p>Suivez les buts, passes décisives, victoires et bien plus.</p>
                    </div>
                    <div>
                        <h2 class="text-xl font-bold">Historique de saisons</h2>
                        <p>Revenez sur chaque saison et consultez vos progrès.</p>
                    </div>
                    <div>
                        <h2 class="text-xl font-bold">Comparaison</h2>
                        <p>Comparez vos statistiques avec d’autres managers.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer collé en bas de la page avec fond gris -->
        <footer class="bg-gray-800 text-white py-4 text-center w-full">
            <p>&copy; 2024 Footyze - Tous droits réservés</p>
        </footer>
    </div>
{% endblock %}